{% extends 'base.html.twig' %}

{% block title %}Réservations
{% endblock %}

{% block body %}
	<h1>Liste des réservations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Client</th>
				<th>Livre</th>
				<th>Date de réservation</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					<td>{{ reservation.id }}</td>
					<td>{{ reservation.reservationUser }}</td>
					<td>{{ reservation.book }}</td>
					<td>{{ reservation.borrowingDate|date('d/m/Y H:i') }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucune réservation trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
