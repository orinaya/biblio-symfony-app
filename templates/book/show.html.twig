{% extends 'base.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<h1>Book</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ book.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ book.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ book.desciption }}</td>
			</tr>
			<tr>
				<th>Date de publication</th>
				<td>{{ book.publicationYear }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>
					{% if book.image %}
						<img src="{{ asset('uploads/images/' ~ book.image) }}" alt="{{ book.title }}" style="max-width: 100px;">
					{% else %}
						Pas d'image
					{% endif %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_book_index') }}">back to list</a>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
	{% endif %}
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<form action="{{ path('app_reservation_new', {id: book.id}) }}" method="get">
			<button type="submit">RÃ©server</button>
		</form>
	{% endif %}


	{% if is_granted('ROLE_ADMIN') %}
		{{ include('book/_delete_form.html.twig') }}
	{% endif %}


	{% for flash_error in app.flashes('error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	{% for flash_success in app.flashes('success') %}
		<div class="alert alert-success" role="alert">{{ flash_success }}</div>
	{% endfor %}
{% endblock %}
